{
  "name": "falcon-tanks",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:vite": "vite",
    "dev": "tsc --project ../server/tsconfig.server.json && cross-env NODE_ENV=development node ../server/index.js",
    "build:vite": "tsc && vite build",
    "build": "tsc --project ../server/tsconfig.server.json && vite build && vite build --ssr src/entry-server.tsx --outDir dist/server --ssrManifest",
    "preview:vite": "vite preview",
    "preview": "node ../server/index.js",
    "lint": "eslint . && prettier .",
    "format": "prettier --write .",
    "test": "jest ./"
  },
  "dependencies": {
    "dotenv": "^16.0.2",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^10.0.5",
    "serialize-javascript": "^6.0.2"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "@testing-library/react": "^13.3.0",
    "@types/node": "^22.8.6",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vitejs/plugin-react": "^2.0.1",
    "axios": "^1.7.7",
    "eslint": "^8.23.0",
    "jest": "^28",
    "jest-environment-jsdom": "^29.0.1",
    "lefthook": "^1.7.15",
    "normalize": "^0.3.1",
    "prettier": "^2.7.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.2",
    "sass": "^1.79.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2",
    "vite": "^3.0.7"
  },
  "license": "MIT"
}
